<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="$(ProjectDir)..\..\build\build.props" />
 
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyVersion>0.0.1.0</AssemblyVersion>
    <FileVersion>0.0.1.0</FileVersion>
    <PackageProjectUrl>https://github.com/mmoreira2000/BigHelp</PackageProjectUrl>
    <PackageLicenseUrl>https://github.com/mmoreira2000/BigHelp/blob/master/LICENSE</PackageLicenseUrl>
    <Authors>Matheus Moreira</Authors>
    <Description>Some useful string extension methods distributed as sourcecode package.</Description>
    <Copyright>Matheus Moreira, 2019</Copyright>
    <RepositoryUrl>https://github.com/mmoreira2000/BigHelp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>soon.</PackageReleaseNotes>
    <PackageTags>extensions, string, helpers</PackageTags>
  </PropertyGroup>
  
  <PropertyGroup>
    <PackageId>BigHelpText</PackageId>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Configurations>Debug;Release;PackageSources</Configurations>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <ItemGroup>
    <None Remove="BigHelp.Text.nuspec" />
    <None Remove="build.ps1" />
  </ItemGroup>

</Project>
